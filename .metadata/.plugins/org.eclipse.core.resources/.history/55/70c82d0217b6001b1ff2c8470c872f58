package EstruturasDeControle.exercicioscontrole.copy;

import java.util.Scanner;

public class MediaAprovacao {
	/**
	 * 3. Criar um programa que receba duas notas parciais, calcular a meÌ?dia final.
	 * Se a nota do aluno for maior ou igual a 7.0 imprime no console "Aprovado", se
	 * a nota for menor que 7.0 e maior do que 4.0 imprime no console
	 * "RecuperacÌ§aÌƒo", caso contraÌ?rio imprime no console "Reprovado".
	 */

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);

		System.out.println("Nota Parcial 1: ");
		double nota1 = scanner.nextDouble();

		System.out.println("Nota Parcial 2: ");
		double nota2 = scanner.nextDouble();

		double media = (nota1 + nota2) / 2;

		if (media >= 7) {
			System.out.println("Sua mÃ©dia foi " + media + " e vocÃª estÃ¡ Aprovado.");
		} else if (media >= 4) {
			System.out.println("Sua mÃ©dia foi " + media + " e vocÃª estÃ¡ de RecuperaÃ§Ã£o.");
		} else {
			System.out.println("Sua mÃ©dia foi " + media + " e vocÃª estÃ¡ Reprovado.");
		}

		scanner.close();
	}

}